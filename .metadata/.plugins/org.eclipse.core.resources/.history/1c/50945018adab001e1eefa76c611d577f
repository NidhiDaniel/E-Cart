<%@page import="com.db.connection.DAOConnection"%>
<%@page import="java.sql.*"%>
<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
<%
String name=request.getParameter("name");
String email=request.getParameter("email");
String newPassword=request.getParameter("new-password");
String question=request.getParameter("security_question");
int status=0;
try{
	Connection con=DAOConnection.getConnection();
	Statement s=con.createStatement();
	ResultSet rs=s.executeQuery("select * from signup_table where name='"+name+"'and email='"+email+"' and security_question='"+question+"'");
	while(rs.next()){
		PreparedStatement stmt=con.prepareStatement("update signup_table set password='"+newPassword+"' where email='"+email+"'");
		status=stmt.executeUpdate();
		response.sendRedirect("login.jsp?msg=done");
	}
	if(status==0){
		response.sendRedirect("login.jsp?msg=error");
	}
	
	
}
catch(Exception e){
	e.printStackTrace();
}
%>
</body>
</html>