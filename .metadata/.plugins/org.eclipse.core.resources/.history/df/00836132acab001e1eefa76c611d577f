<%
String name=request.getParameter("name");
String email=request.getParameter("email");
String newPassword=request.getParameter("new-password");
int status=0;
try{
	Connection con=DAOConnection.getConnection();
	Statement s=con.createStatement();
	ResultSet rs=s.executeQuery("select * from signup_table where name='"+name+"',email='"+email+"'");
	while(rs.next()){
		PreparedStatement stmt=con.prepareStatement("update signup_table set password='"+newPassword+"' where email='"+email+"'");
		status=stmt.executeUpdate();	
	}
	
	
	
}
catch(Exception e){
	e.printStackTrace();
}
%>
</body>
</html>